{
  "name": "wordclock",
  "version": "1.2.1",
  "private": true,
  "packageManager": "pnpm@10.26.0",
  "author": "Simon Heys <si@simonheys.com>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --ignore-unknown --write . && turbo run format",
    "build": "turbo run build --filter='!wordclock-macos'",
    "lint": "turbo run lint",
    "test": "CI=true turbo run test --filter='!wordclock-macos'",
    "dev": "turbo run dev",
    "prepare": "husky",
    "publish-npm": "pnpm run -r --parallel --stream publish-npm"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "vitest related --run"
    ]
  }
}
