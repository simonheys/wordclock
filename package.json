{
  "name": "wordclock",
  "version": "1.1.5",
  "private": true,
  "author": "Simon Heys <si@simonheys.com>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prettier": "prettier --write './**/*.{js,json,css,scss,yml,ts,tsx,md}'",
