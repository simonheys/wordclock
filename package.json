  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0"
  },
  "jest": {
    "verbose": true
  },
  "lint-staged": {
    "*.{js,json,css,scss,yml,ts,ts,md}": "prettier --write"
  }
}
